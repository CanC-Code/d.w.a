<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:id="@+id/setup_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dragon Warrior"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_select_rom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select ROM File"
            android:textSize="18sp"
            android:padding="16dp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/game_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <SurfaceView
            android:id="@+id/game_surface"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <View
            android:id="@+id/debug_overlay_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88000000"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/dpad_layout"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp">

            <Button
                android:id="@+id/btn_up"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:text="↑"
                android:alpha="0.5"
                android:background="@android:drawable/btn_default"/>

            <Button
                android:id="@+id/btn_down"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="↓"
                android:alpha="0.5"/>

            <Button
                android:id="@+id/btn_left"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:text="←"
                android:alpha="0.5"/>

            <Button
                android:id="@+id/btn_right"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="→"
                android:alpha="0.5"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_b"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="B"
                    android:layout_marginEnd="20dp"
                    android:alpha="0.7"
                    android:backgroundTint="#FF4444"/>

                <Button
                    android:id="@+id/btn_a"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="A"
                    android:alpha="0.7"
                    android:backgroundTint="#44FF44"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_select"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="SELECT"
                    android:textSize="10sp"
                    android:layout_marginEnd="10dp"
                    android:alpha="0.5"/>

                <Button
                    android:id="@+id/btn_start"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="START"
                    android:textSize="10sp"
                    android:alpha="0.5"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_debug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="TOGGLE DEBUG"
            android:textSize="10sp"
            android:alpha="0.6"
            android:backgroundTint="#555555"/>

    </RelativeLayout>
</FrameLayout>
