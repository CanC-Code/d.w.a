<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Game Screen -->
    <ImageView
        android:id="@+id/screenView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/controllerArea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="H,256:240" />

    <!-- Controller Area -->
    <LinearLayout
        android:id="@+id/controllerArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#20000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- D-Pad -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/btnUp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/button_up"
                android:contentDescription="Up"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/btnDown"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/button_down"
                android:contentDescription="Down"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/btnLeft"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/button_left"
                android:contentDescription="Left"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/btnRight"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/button_right"
                android:contentDescription="Right"
                android:clickable="true"
                android:focusable="true" />
        </RelativeLayout>

        <!-- Center Buttons -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnStart"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/button_start"
                android:contentDescription="Start"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/btnSelect"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:src="@drawable/button_select"
                android:contentDescription="Select"
                android:clickable="true"
                android:focusable="true" />

            <Button
                android:id="@+id/btnLoadRom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Load ROM"
                android:textSize="10sp"
                android:padding="4dp" />
        </LinearLayout>

        <!-- Action Buttons -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/btnB"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/button_b"
                android:contentDescription="B"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/btnA"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/button_a"
                android:contentDescription="A"
                android:clickable="true"
                android:focusable="true" />
        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>